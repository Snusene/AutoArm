<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<!-- Move Thrumbo Horn to Weapons -->
	<Operation Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationRemove">
				<xpath>/Defs/ThingDef[defName="ThrumboHorn"]/thingCategories</xpath>
				<success>Always</success>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName="ThrumboHorn"]</xpath>
				<value>
					<thingCategories>
						<li>WeaponsMelee</li>
					</thingCategories>
				</value>
			</li>
		</operations>
	</Operation>

	<!-- Move Elephant Tusk to Weapons -->
	<Operation Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationRemove">
				<xpath>/Defs/ThingDef[defName="ElephantTusk"]/thingCategories</xpath>
				<success>Always</success>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName="ElephantTusk"]</xpath>
				<value>
					<thingCategories>
						<li>WeaponsMelee</li>
					</thingCategories>
				</value>
			</li>
		</operations>
	</Operation>
</Patch>